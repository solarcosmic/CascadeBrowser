{
  "name": "cascadebrowser",
  "version": "1.0.0",
  "description": "A proof-of-concept web browser built in Electron",
  "homepage": "https://github.com/solarcosmic/CascadeBrowser#readme",
  "license": "MIT",
  "author": "solarcosmic",
  "type": "commonjs",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux"
  },
  "build": {
    "appId": "net.solarcosmic.cascadebrowser",
    "productName": "Cascade Browser",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "!node_modules/.bin",
      "!**/*.md",
      "!**/test{,s}/**/*",
      "!**/*.log"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    }
  },
  "devDependencies": {
    "electron": "github:castlabs/electron-releases#v37.1.0+wvcus",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "fs": "^0.0.1-security",
    "http": "^0.0.1-security",
    "https": "^1.0.0",
    "path": "^0.12.7"
  }
}
